{
    "variables": {
        "access_key": "",
        "secret_key": "",
        "region": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user access_key}}",
        "secret_key": "{{user secret_key}}",
        "region": "{{user region}}",
        "source_ami": "ami-055fe978", 
        "instance_type": "t2.micro",
        "ssh_username": "admin",
        "ami_name": "aiohttp-elasticsearch-s3-logs-handler_kibana_ami"
    }],
    "provisioners": [
        {
            "type": "file",
            "destination": "/tmp/sources.list",
            "source": "./es_kibana_sources.list"
        },
        {
            "type": "shell",
            "inline": [
                "sleep 60",
                "sudo mv /tmp/sources.list /etc/apt/sources.list",
                "sudo apt-get update",
                "sudo apt-get install -y ansible"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "bootstrap-kibana.yml"
        }
    ]
}
