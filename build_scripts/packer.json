{
    "variables": {
        "access_key": "",
        "secret_key": "",
        "region": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `access_key`}}",
        "secret_key": "{{user `secret_key`}}",
        "region": "{{user `region`}}",
        "source_ami": "ami-440d4837", 
        "instance_type": "t2.micro",
        "ssh_username": "admin",
        "ami_name": "tornado-kibana-logs-handler_service_ami"
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [
            "sleep 30",
            "apt-get update",
            "apt-get upgrade -y",
            "apt-get install -y ansible"
        ]
    }]
}
