{
    "variables": {
        "access_key": "",
        "secret_key": "",
        "region": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `access_key`}}",
        "secret_key": "{{user `secret_key`}}",
        "region": "{{user `region`}}",
        "source_ami": "ami-440d4837", 
        "instance_type": "t2.micro",
        "ssh_username": "admin",
        "ami_name": "tornado-kibana-logs-handler_service_ami"
    }],
    "provisioners": [
        {
            "type": "file",
            "destination": "/tmp/sources.list",
            "source": "./service_sources.list"
        },
        {
            "type": "shell",
            "inline": [
                "sleep 60",
                "sudo mv /tmp/sources.list /etc/apt/sources.list",
                "sudo apt-get update",
                "sudo apt-get install -y ansible"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "bootstrap.yml"
        }
    ]
}
